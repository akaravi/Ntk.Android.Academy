        <activity
            android:name="ntk.android.academy.activity.ActLogin"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="ntk.android.academy.activity.ActAbout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name="ntk.android.academy.activity.ActSupport"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
